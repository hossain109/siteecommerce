{% extends 'layout/layout.html.twig' %}

{% block body %}
        <div class="container">
        <div class="row">
            <div class="span9 offset2">
    <h1>Page</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ page.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ page.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('page_admin_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('page_admin_edit', { 'id': page.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
            </div>
            </div>
            </div>
{% endblock %}
